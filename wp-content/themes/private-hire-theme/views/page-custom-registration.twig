{% extends 'base.twig' %}

{% block content %}
<section>
<div class="container min-h-80-vh pt-5">
<h1 class="font-montserrat mb-5">Register for your travel account</h1>
<form method="post" action="http://i-travel-services.local/custom-registration">
<div class="row">
<div class="col-6">
<h4 class="font-montserrat mb-3">User details</h4>
    <p>
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" required>
    </p>
    <p>
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" required>
    </p>
    <p>
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
    </p>
    {# Add custom ACF fields here #}
    <p>
        <label class="form-label" for="first_name">First name</label>
        <input class="form-control" type="text" id="first_name" name="first_name" required>
    </p>
        <p>
        <label class="form-label" for="last_name">Last name</label>
        <input class="form-control" type="text" id="last_name" name="last_name" required>
    </p>
        {# <p>
        <label class="form-label" for="house_name">House / Flat number</label>
        <input class="form-control" type="text" id="house_name" name="house_name">
    </p> #}
</div>
<div class="col-6">
<h4 class="font-montserrat mb-3">Address details</h4>
    <p>
        <label class="form-label" for="house_number">House / Flat number</label>
        <input class="form-control" type="text" id="house_number" name="house_number">
    </p>
        <p>
        <label class="form-label" for="street_name">Street name</label>
        <input class="form-control" type="text" id="street_name" name="street_name">
    </p>
        <p>
        <label class="form-label" for="town_city">Town / City</label>
        <input class="form-control" type="text" id="town_city" name="town_city">
    </p>


        <p>
        <label class="form-label" for="county">County</label>
        <input class="form-control" type="text" id="county" name="county">
    </p>
        <p>
        <label class="form-label" for="postcode">Postcode</label>
        <input class="form-control" type="text" id="postcode" name="postcode">
    </p>

    </div>
    </div>
        <p>
        <button class="btn btn-primary btn-lg w-100" type="submit" name="custom_registration">Register</button>
    </p>
</form>

</div>
</section>
{% endblock %}